{
  "name": "@cartel-sh/api",
  "version": "7.16.0",
  "description": "Shared REST API and SDK for Cartel",
  "main": "./dist/client/index.js",
  "module": "./dist/client/index.mjs",
  "types": "./dist/client/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.mjs",
      "require": "./dist/client/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.mjs",
      "require": "./dist/client/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.mjs",
      "require": "./dist/server/index.js"
    },
    "./types": {
      "types": "./dist/schema.d.ts",
      "import": "./dist/schema.mjs",
      "require": "./dist/schema.js"
    }
  },
  "scripts": {
    "format": "bunx biome format --write",
    "build": "tsup",
    "server": "bun run src/server/index.ts",
    "dev": "bun --watch src/server/index.ts",
    "test": "NODE_ENV=test bun test",
    "test:watch": "NODE_ENV=test bun test --watch",
    "test:coverage": "NODE_ENV=test bun test --coverage",
    "test:db:setup": "docker-compose -f docker-compose.test.yml up -d && sleep 5 && bun run test:db:migrate",
    "test:db:migrate": "NODE_ENV=test drizzle-kit migrate",
    "test:db:push": "NODE_ENV=test drizzle-kit push",
    "test:db:studio": "NODE_ENV=test drizzle-kit studio",
    "test:db:teardown": "docker-compose -f docker-compose.test.yml down -v",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.0",
    "@hono/zod-openapi": "^1.1.0",
    "@hono/zod-validator": "^0.7.2",
    "@libsql/client": "^0.14.0",
    "@scalar/hono-api-reference": "^0.9.16",
    "@scalar/openapi-to-markdown": "^0.2.30",
    "@types/luxon": "^3.7.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.40.0",
    "ethers": "^6.15.0",
    "hono": "^4.9.4",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.7.1",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "postgres": "^3.4.5",
    "siwe": "^3.0.0",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@types/bun": "^1.2.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.2",
    "bun-types": "^1.2.21",
    "drizzle-kit": "^0.28.1",
    "drizzle-seed": "^0.3.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cartel-sh/api"
  },
  "keywords": [
    "database",
    "drizzle",
    "libsql",
    "cartel"
  ],
  "author": "",
  "license": "MIT"
}